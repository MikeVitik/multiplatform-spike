{
  "name": "multiplatform-spike",
  "version": "1.0.0",
  "description": "spike of the new architecture",
  "main": "index.js",
  "scripts": {
    "clean:dist": "del-cli ./dist",
    "fix-types": "npm run clean:dist && npm run lib:all:build && npm install",
    "lib:core:build": "npm run build -w libs/core",
    "lib:core:watch": "npm run watch -w libs/core",
    "lib:react:build": "npm run build -w libs/react",
    "lib:react:watch": "wait-on dist/core && npm run watch -w libs/react",
    "lib:angular:build": "npm run build -w libs/angular-workspace",
    "lib:angular:watch": "wait-on dist/core && npm run watch -w libs/angular-workspace",
    "lib:all:build": "npm run lib:core:build && npm run lib:react:build && npm run lib:angular:build",
    "play:react:watch": "npm run start -w playgrounds/react",
    "play:angular:watch": "npm run start -w playgrounds/angular",
    "prestart:react": "npm run clean:dist",
    "start:react:play:watch": "wait-on dist/react && npm run play:react:watch",
    "start:react": "concurrently --kill-others npm:lib:core:watch npm:lib:react:watch npm:start:react:play:watch",
    "prestart:angular": "npm run clean:dist",
    "prestart:angular:play:watch": "wait-on dist/angular && node ./build-utils/set-lib-version.js ./dist/angular/package.json ./playgrounds/angular/package.json",
    "start:angular:play:watch": "npm run play:angular:watch",
    "start:angular": "concurrently --kill-others npm:lib:core:watch npm:lib:angular:watch npm:start:angular:play:watch",
    "poststart:angular": "node ./build-utils/set-lib-version.js ./libs/angular-workspace/projects/angular-lib/package.json ./playgrounds/angular/package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/williamvinogradov/multiplatform-spike.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/williamvinogradov/multiplatform-spike/issues"
  },
  "homepage": "https://github.com/williamvinogradov/multiplatform-spike#readme",
  "devDependencies": {
    "colors": "^1.4.0",
    "concurrently": "^7.3.0",
    "del-cli": "^5.0.0",
    "wait-on": "^6.0.1"
  },
  "workspaces": [
    "dist/*",
    "libs/*",
    "playgrounds/*"
  ]
}
